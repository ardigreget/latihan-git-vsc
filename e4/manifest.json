{
    "manifest_version": 3,
    "name": "Login Checker",
    "version": "1.0",
    "description": "Memeriksa status login dan menampilkan pesan",
    "permissions": [
        "cookies",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "http://akses.papindo.id/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}
