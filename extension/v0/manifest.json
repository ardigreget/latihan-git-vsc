{
    "manifest_version": 3,
    "name": "Token Checker Extension",
    "version": "1.0",
    "description": "Memeriksa token pengguna dan mengarahkan sesuai status.",
    "permissions": [
      "cookies",
      "tabs",
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "https://akses.papindo.id/*"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  